{
  "name": "marcodaniels-wardrobe",
  "description": "A collection of React.js components for marcodaniels projects.",
  "author": "Marco Daniel Martins <marcodanielmartins@gmail.com>",
  "homepage": "https://wardrobe.marcodaniels.com",
  "license": "MIT",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/MarcoDaniels/wardrobe.git"
  },
  "scripts": {
    "dev": "start-storybook -p 6006 -c storybook/config",
    "build:storybook": "rm -rf build/ && build-storybook -c storybook/config -o build/",
    "build:library": "rm -rf lib/ && tsc --p tsconfig.prod.json --pretty",
    "test": "jest --collectCoverage=false",
    "test:coveralls": "jest && cat ./coverage/lcov.info | coveralls",
    "test:coverage": "jest"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.test.(ts|tsx)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/src/index.ts",
      "!<rootDir>/src/**.snap"
    ]
  },
  "dependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^4.1.11",
    "@storybook/addon-console": "^1.1.0",
    "@storybook/addon-info": "^4.1.11",
    "@storybook/addon-knobs": "^4.1.1",
    "@storybook/addon-options": "^4.1.4",
    "@storybook/addon-viewport": "^4.1.1",
    "@storybook/addons": "^4.1.1",
    "@storybook/react": "^4.1.1",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.17",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-info": "^3.4.3",
    "@types/storybook__addon-knobs": "^3.4.1",
    "@types/storybook__react": "^4.0.0",
    "@types/styled-components": "^4.1.4",
    "@types/why-did-you-update": "^0.0.9",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "coveralls": "^3.0.2",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "jest": "^23.6.0",
    "node-sass": "^4.11.0",
    "react-docgen-typescript-loader": "^3.0.1",
    "sass-loader": "^7.1.0",
    "styled-components": "^4.1.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "why-did-you-update": "^1.0.6"
  }
}
